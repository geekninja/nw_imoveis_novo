.row
  .col-md-12
    %section.panel
      %header.panel-heading
        Listagem de Banners
        = link_to "novo banner", new_banner_path, class: "btn btn-success pull-right btn-xs"
      .panel-body
        %table.table.table-condensed.table-striped.datatable
          %thead
            %tr
              %th Nome
              %th Status
              %th Ações
          %tbody
            - @banners.each do |banner|
              %tr
                %td= banner.name
                %td= banner.status ? "<span class='label label-success'>ativo</span>".html_safe : "<span class='label label-danger'>inativo</span>".html_safe
                %td.col-md-2
                  =link_to "editar", edit_banner_path(banner), class: 'btn btn-info btn-xs'
                  =link_to "excluir", banner_path(banner), method: :delete, class: 'btn btn-danger btn-xs', data: { confirm: t(:confirm)}
