.row
  .col-md-12
    %section.panel
      %header.panel-heading
        Listagem de Attributes de Imóvel
        = link_to "novo attributo", new_attribute_path, class: "btn btn-success pull-right btn-xs"
      .panel-body
        %table.table.table-condensed.table-striped
          %thead
            %tr
              %th Nome
              %th.col-md-1 Status
              %th.col-md-2 Ações
          %tbody
            - @attributes.each do |attribute|
              %tr
                %td= attribute.name
                %td.col-md-1= attribute.status ? "<span class='label label-success'>Ativo</span>".html_safe : "<span class='label label-danger'>Inativo</span>".html_safe
                %td.col-md-2
                  =link_to "", edit_attribute_path(attribute), class: 'btn btn-info btn-sm fa fa-pencil'
                  =link_to "", attribute_path(attribute), method: :delete, class: 'btn btn-danger btn-sm fa fa-times', data: { confirm: t(:confirm)}