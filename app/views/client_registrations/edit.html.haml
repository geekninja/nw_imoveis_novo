.row
  .col-md-12
    %section.panel
      %header.panel-heading
        Editar Meu Usuário
      .panel-body
        = simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
          .row
            .col-md-6
              = f.input :email, required: true, autofocus: true
          .row
            .col-md-3
              = f.input :password, autocomplete: "off", hint: "Deixe em branco caso não queira alterar a senha", required: false
            .col-md-3
              = f.input :password_confirmation, required: false
          .row
            .col-md-3
              = f.input :current_password, label: "Confirmação de senha", hint: "É necessário que informe a senha atual para prosseguir", required: true
          %hr/
          .row
            .col-md-12
              = f.button :submit, "Atualizar minha conta", class: 'btn btn-success'
        